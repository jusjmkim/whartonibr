<% content_for :head do %>
  <%= stylesheet_link_tag 'post_show' %>
  <%= stylesheet_link_tag 'post_index' %>
<% end %>

<div id='blog-header'>
  <img id='blog-logo' src="/assets/IBR_logo.png">
  <%= render 'home/admin_login' %>
</div>

<div id='post-wrapper'>
  <p id='post-title'>
    <%= @post.title %>
  </p>

  <p id='post-author'>
    BY <%= @post.author %>
  </p>

  <p id='post-date'>
    Pubished on: <%= @post.created_at.to_date.strftime('%D') %>
    <% unless @post.created_at == @post.updated_at %>
      <br />
      Updated on: <%= @post.updated_at.to_date.strftime('%D') %>
    <% end %>
  </p>

  <div class='modal-image-container'>
    <%= render 'posts/image', { post: @post, image_type: 'modal' } %>
  </div>

  <p id='post-body'>
    <%= sanitize_post @post.body.gsub(/\n/, '<br>') %>
  </p>

  <%= render 'posts/edit_delete', post: @post %>
  <%= render 'posts/back_button' %>
</div>
