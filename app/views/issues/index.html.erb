<div class="row">
  <% @issues.each_with_index do |issue, index| %>
    <a href="#" data-reveal-id="issue-<%= issue.id %>-modal">
      <div class="large-4 columns issue-container">
        <img src="<%= image_path issue.issue_img %>" class="issue-image">
        <span class="issue-name"><%= issue.name %></span>
      </div>
    </a>
    <% if (index + 1) % 3 == 0 %>
      </div><div class="row">
    <% end %>
  <% end %>
</div>

<br>
<br>
<br>

<% @issues.each do |issue| %>
  <div id="issue-<%= issue.id %>-modal" class="reveal-modal">
    <a href="#" class="close-reveal-modal">x</a>
    <div class="row">
      <div class="large-2 columns">
        <img src="<%= image_path issue.issue_img %>">
        <a href="<%= new_issue_issue_order_path(issue_id: issue.id) %>" class="issue-purchase">Purchase this Issue</a>
      </div>
      <div class="large-8 columns">
        <span class="issue-title"><%= issue.title %></span>
        <span class="issue-name">International Business Review <%= issue.name %></span>
      </div>
    </div>
  </div>
<% end %>
